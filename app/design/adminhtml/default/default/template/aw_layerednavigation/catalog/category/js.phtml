?><script type="text/javascript">
    Ajax.Responders.register({
        onComplete: function(request) {

            if (request.url.indexOf('catalog_category/edit/') !== -1) {
                var synchronizeCheckboxTemplate =
                    '<br>' +
                    '<input id="aw-ln-synchronize-{{attributeCode}}" name="synchronize[{{attributeCode}}]" value="1" type="checkbox" title="<?php echo Mage::helper('aw_layerednavigation')->__('Synchronize with Layered Navigation'); ?>">' +
                    '<label for="aw-ln-synchronize-{{attributeCode}}" title="<?php echo Mage::helper('aw_layerednavigation')->__('Synchronize with Layered Navigation'); ?>"><?php echo Mage::helper('aw_layerednavigation')->__('Synchronize with Layered Navigation'); ?></label>' +
                    '<br>'
                ;

                synchronizeCheckboxTemplate = new Template(synchronizeCheckboxTemplate, new RegExp('(^|.|\\r|\\n)({{\\s*(\\w+)\\s*}})', ''));

                var formPrefix = 'group_3';
                Element.insert(
                    $(formPrefix + 'name'),
                    {after : synchronizeCheckboxTemplate.evaluate({'attributeCode': 'name'})}
                );
                Element.insert(
                    $(formPrefix + 'is_active'),
                    {after : synchronizeCheckboxTemplate.evaluate({'attributeCode': 'is_active'})}
                );
                Element.insert(
                    $(formPrefix + 'description'),
                    {after : synchronizeCheckboxTemplate.evaluate({'attributeCode': 'description'})}
                );
            }
        }
    });
</script>