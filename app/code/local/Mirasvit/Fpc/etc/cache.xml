<?xml version="1.0" encoding="UTF-8"?>
<config>
    <containers>
        <html_header>
            <block>page/html_header</block>
            <name>header</name>
            <container>Mirasvit_Fpc_Model_Container_Base</container>
            <depends>cart,customer,customer_group,compare,wishlist,category,store,currency,locale,is_home</depends>
            <cache_lifetime>3600</cache_lifetime>
        </html_header>
        <cart_sidebar>
            <block>checkout/cart_sidebar</block>
            <container>Mirasvit_Fpc_Model_Container_Base</container>
            <depends>cart,customer,customer_group</depends>
            <cache_lifetime>3600</cache_lifetime>
        </cart_sidebar>
        <welcome_message>
            <block>page/html_welcome</block>
            <container>Mirasvit_Fpc_Model_Container_Welcome</container>
            <depends>customer,customer_group</depends>
            <cache_lifetime>3600</cache_lifetime>
        </welcome_message>
        <last_viewed_products>
            <block>reports/product_viewed</block>
            <container>Mirasvit_Fpc_Model_Container_Productviewed</container>
            <cache_lifetime>3600</cache_lifetime>
        </last_viewed_products>
        <compare_list_sidebar>
            <block>catalog/product_compare_sidebar</block>
            <container>Mirasvit_Fpc_Model_Container_Base</container>
            <depends>compare</depends>
            <cache_lifetime>3600</cache_lifetime>
        </compare_list_sidebar>
        <wishlist>
            <block>wishlist/customer_sidebar</block>
            <container>Mirasvit_Fpc_Model_Container_Base</container>
            <depends>customer,wishlist</depends>
            <cache_lifetime>3600</cache_lifetime>
        </wishlist>
        <top_links>
            <block>page/template_links</block>
            <name>top.links</name>
            <container>Mirasvit_Fpc_Model_Container_Base</container>
            <depends>customer,cart,wishlist</depends>
            <cache_lifetime>3600</cache_lifetime>
        </top_links>
        <global_notices>
            <block>page/html_notices</block>
            <name>global_notices</name>
            <container>Mirasvit_Fpc_Model_Container_Base</container>
            <depends>allow_save_cookies</depends>
            <cache_lifetime>3600</cache_lifetime>
        </global_notices>
        <global_cookie_notice>
            <block>page/html_cookieNotice</block>
            <name>global_cookie_notice</name>
            <container>Mirasvit_Fpc_Model_Container_Base</container>
            <depends>allow_save_cookies</depends>
            <cache_lifetime>3600</cache_lifetime>
        </global_cookie_notice>
        <!-- <fpc_debug>
            <block>fpc/debug</block>
            <container>Mirasvit_Fpc_Model_Container_Debug</container>
        </fpc_debug> -->
    </containers>

    <actions>
        <catalog_product_view>
            <recently_viewed>
                <class>Mirasvit_Fpc_Model_Container_Productviewed</class>
                <method>registerViewedProduct</method>
            </recently_viewed>
        </catalog_product_view>
        <catalog_category_view>
            <catalog_session>
                <class></class>
                <method>saveSessionVariables</method>
            </catalog_session>
        </catalog_category_view>
        <splash_page_view>
            <catalog_session>
                <class></class>
                <method>saveSessionVariables</method>
            </catalog_session>
        </splash_page_view>
    </actions>
</config>
