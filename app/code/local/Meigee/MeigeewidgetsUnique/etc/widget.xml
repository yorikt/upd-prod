<widgets>
	<unique_featuredcategory_extended type="meigeewidgetsunique/featuredcategory">
		<name>Meigee - Unique/Featured Category Extended</name>
		<description type="desc">Adds a list of products from featured category with advanced parameters</description>
		<parameters>
			<featured_category>
				<visible>1</visible>
				<label>Featured Category</label>
				<required>1</required>
				<type>label</type>
				<helper_block>
					<type>adminhtml/catalog_category_widget_chooser</type>
					<data>
						<button translate="open">
							<open>Select Category...</open>
						</button>
					</data>
				</helper_block>
			</featured_category>
			<template translate="label">
				<label>Display as</label>
				<description>If chosen slider make sure you have at least 5 products to display, otherwise widget won't be displayed.</description>
				<visible>1</visible>
				<required>0</required>
				<type>select</type>
				<source_model>meigeewidgetsunique/templates</source_model>
			</template>
			<products_amount>
				<label>Amount of Products to Display</label>
				<visible>1</visible>
				<required>1</required>
				<type>text</type>
				<value>10</value>
			</products_amount>
			<products_per_row>
				<label>Products per Row</label>
				<visible>1</visible>
				<required>0</required>
				<type>select</type>
				<value>4</value>
				<source_model>meigeewidgetsunique/productsperrow</source_model>
